{% extends 'base.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							Vous êtes connecté en tant que 
							{{ app.user.nom }},
							<a href="{{ path('security_logout') }}">Se déconnecter</a>
						</div>
					{% endif %}

					<h1 class="h3 mb-3 font-weight-normal my-3">Page de connexion</h1>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

					<label for="inputPassword" class="my-3">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<div class="checkbox mb-3 my-3">
						<label> Se souvenir de moi </label>
						<input type="checkbox" name="_remember_me"> 
					</div>
					  
					<button class="btn btn-lg btn-primary my-3" type="submit"> Me connecter </button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
